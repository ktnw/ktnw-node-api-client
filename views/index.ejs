<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Puppies</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <h1>Hello Puppies!</h1>

      <ul>
        <% puppies.forEach(function(puppy) { %>
          <li><%= puppy.name %> - <%= puppy.breed %> - <%= puppy.birthdate %>&nbsp
            <a href="/edit/<%= puppy.id %>">Edit</a>&nbsp
            <a href="/delete/<%= puppy.id %>">Delete</a>
          </li>
        <% }); %>
      </ul>
      <a href="/new">New</a>
    </div>
  </body>
</html>